<div class="col-md-4 portfolio-item" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 shadow-sm">
    <%= image_tag(portfolio_item.thumb_image.url) unless portfolio_item.thumb_image.nil? %>
    <div class="card-body">
      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item.id) %></p>
      <p class="card-text"><%= portfolio_item.subtitle %></p>
      <div class="d-flex justify-content-between align-items-center">
      </div>
    </div>
  </div>
</div>

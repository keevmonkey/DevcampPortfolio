<header class="blog-header mb-auto py-3">
  <div class="container">
    <div id="blog-nav" class="main-nav">
      <nav class="nav nav-masthead justify-content-center">
        <%= link_to "Home", root_path, class: "nav-link" %>
        <%= link_to "About", about_path, class: "nav-link" %>
        <%= link_to "Contact", contact_path, class: "nav-link" %>
        <%= link_to "Blog", blogs_path, class: "nav-link" %>
        <%= link_to "Portfolio", portfolios_path, class: "nav-link" %>
        <%= login_helper("nav-link") %>
        <%= link_to 'New Blog', new_blog_path, class: "nav-link" if logged_in?(:site_admin) %>
      </nav>
    </div>

    <div id="categories" class="nav-scroller py-1 mb-2">
      <nav class="nav d-flex justify-content-between">
        <% @topics.each do |topic| %>
          <%= link_to topic.title, blogs_path, class: "p-2 text-muted" %>
        <% end %>
      </nav>
    </div>

  </div>
</header>
